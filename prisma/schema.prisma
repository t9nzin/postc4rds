generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Postcard {
  id String @id @default(cuid())
  originalPhotoUrl String

  generatedImageUrl String?
  aiPrompt String?

  message String
  recipientEmail String 
  recipientName String?
  senderName String 

  location String?
  style String?
  status String

  sentAt DateTime?
  expiresAt DateTime 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([status])
  @@index([expiresAt])
}
